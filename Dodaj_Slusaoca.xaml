<Window x:Class="Zadaci_5_ispravka.Dodaj_Slusaoca"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadaci_5_ispravka"
        mc:Ignorable="d"
        Title="Dodaj_Slusaoca" Height="180" Width="450" FontSize="18">
    <UniformGrid>
        <Label Content="Ime slusaoca : "  VerticalAlignment="Center" HorizontalAlignment="Center" />
        <TextBox Margin="0 25" Text="{Binding Ime, UpdateSourceTrigger=Explicit}"/>
        <Button Content="Otkazi" Click="Otkazi"/>
        <Button Content="Dodaj!" Click="Dodaj"/>
    </UniformGrid>
</Window>
