<Window x:Class="Zadaci_5_ispravka.Diktafon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadaci_5_ispravka"
        mc:Ignorable="d"
        Title="Diktafon" Height="450" Width="800" FontSize="17">
    <ScrollViewer>
        <StackPanel> 
            <DataGrid Name="Dg" AutoGenerateColumns="False" ColumnWidth="*" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Snimato" Binding="{Binding .}"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="Izbrisi!" Click="Izbrisi"/>
        </StackPanel>
    </ScrollViewer>
</Window>
